<% if @b.errors.any? %>
     <h2> following errors occured: </h2>
	 <ul>
		 <% @b.errors.full_messages.each do |msg| %>
		 <li> <%= msg %> </li>
		 <% end %>
	 </ul>
<% end %>
<div class="col-sm-12">
	<%= form_for(@b, :html => {class: "form-horizontal", role:"form" }) do |f| %>
        <div class="form-group">
	        <div class="col-sm-2 control-label">
				<%= f.label :apellation, class: "form-head" %> 
			</div>
			<div class="col-sm-10">
				<%= f.text_field :apellation, class: "form-control",placeholder: "Type your apellation here",autofocus: "true" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-2 control-label">
				<%= f.label :caption, class: "form-head" %>
			</div>
			<div class="col-sm-10">
				<%= f.text_area :caption , class: "form-control", placeholder: "Type your caption here"  %>
			</div>
        </div>
		<div class="form-group">
			<div class="col-sm-2 control-label">
				<%= f.label :specification, class: "form-head" %>
			</div>
			<div class="col-sm-10">
				<%= f.text_area :specification, class: "form-control",placeholder: "Type your specification here"  %> 
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit class: "btn btn-primary create-btn" %>
				<%= link_to 'Back', blogs_path, class: "col-sm-offset-11 back" %>
			</div>
		</div>	 
	<% end %>
</div>
