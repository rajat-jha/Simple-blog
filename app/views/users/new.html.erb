<%= render 'shared/errors', obj:@u %>


<div class="col-sm-12">
	<%= form_for(@u, :html => {class: "form-horizontal", role:"form" }) do |f| %>
        <div class="form-group">
	        <div class="col-sm-2 control-label">
				<%= f.label :username, class: "form-head" %> 
			</div>
			<div class="col-sm-10">
				<%= f.text_field :username, class: "form-control",placeholder: "Enter your name",autofocus: "true" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-2 control-label">
				<%= f.label :email, class: "form-head" %>
			</div>
			<div class="col-sm-10">
				<%= f.email_field :email , class: "form-control", placeholder: "Enter your email"  %>
			</div>
        </div>
		<div class="form-group">
			<div class="col-sm-2 control-label">
				<%= f.label :password, class: "form-head" %>
			</div>
			<div class="col-sm-10">
				<%= f.password_field :password, class: "form-control",placeholder: "Enter password"  %> 
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit "SignUp", class: "btn btn-primary create-btn" %>
				<%= link_to 'Back', blogs_path, class: "col-sm-offset-11 back" %>
			</div>
		</div>	 
	<% end %>
</div>
